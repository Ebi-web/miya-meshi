{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "nuxt.config.js",
      "use": "@nuxtjs/vercel-builder",
      "config": {
        "serverFiles": ["package.json"]
      }
    }
  ],
  "routes": [
    { "src": "/_nuxt/.+", "headers": { "Cache-Control": "max-age=31557600" } },
    {
      "src": "/sw.js",
      "dest": "/_nuxt/static/sw.js",
      "headers": {
        "cache-control": "public, max-age=43200, immutable",
        "Service-Worker-Allowed": "/"
      }
    },
    {
      "src": "/s/(.*)",
      "headers": { "cache-control": "s-maxage=604800" },
      "dest": "/s/$1"
    },
    {
      "src": "/favicon.ico",
      "headers": { "cache-control": "s-maxage=604800" },
      "dest": "/favicon.ico"
    },
    {
      "src": "/no-image.png",
      "headers": { "cache-control": "s-maxage=604800" },
      "dest": "/no-image.png"
    },
    { "src": "/(.*)", "dest": "/" }
  ]
}
